<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterTicketsController"
          alignment="center" hgap="10" vgap="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Sélectionner un événement:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="eventComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Type de ticket:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="typeField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Prix:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="prixField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Date de validité:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dateValiditePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Nombre de tickets:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="nbTicketsField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Statut:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <ComboBox fx:id="statutComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="En attente"/>
                <String fx:value="Confirmé"/>
                <String fx:value="Annulé"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Button text="Ajouter Ticket" fx:id="ajouterButton" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
</GridPane>
