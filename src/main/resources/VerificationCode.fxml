<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="250.0" prefWidth="400.0" stylesheets="@styles_new.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.VerificationCodeController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Vérification d'Email" textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <Label text="Un code de vérification a été envoyé à votre adresse email." textFill="WHITE" textAlignment="CENTER" wrapText="true">
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" />
                    </VBox.margin>
                </Label>

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Code:" textFill="WHITE" />
                        <TextField fx:id="codeField" promptText="Entrez le code à 6 chiffres" prefWidth="200.0" />
                    </children>
                </HBox>

                <Label fx:id="errorLabel" textFill="RED" />

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="verifyButton" mnemonicParsing="false" onAction="#verifyCode" styleClass="button_crud" text="Vérifier" />
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" styleClass="button_crud" text="Annuler" />
                    </children>
                </HBox>

                <Label fx:id="attemptsLabel" text="Tentatives restantes: 3" textFill="WHITE" />
            </children>
        </VBox>
    </children>
</AnchorPane>