<AnchorPane prefHeight="600.0" prefWidth="600.0" stylesheets="@styles_new.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.InscriptionController">
    <children>
        <HBox alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
            <Label text="Créer un compte" textFill="WHITE">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
        </HBox>

        <Label text="Nom:" textFill="WHITE" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="100.0" />
        <TextField fx:id="nom_field" AnchorPane.leftAnchor="260.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="100.0" />

        <Label text="Email:" textFill="WHITE" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="150.0" />
        <TextField fx:id="email_field" AnchorPane.leftAnchor="260.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="150.0" />

        <Label text="Mot de passe:" textFill="WHITE" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="200.0" />
        <PasswordField fx:id="mdp_field" AnchorPane.leftAnchor="260.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="200.0" />

        <HBox alignment="CENTER_LEFT" AnchorPane.leftAnchor="260.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="235.0">
            <children>
                <ProgressBar fx:id="passwordStrengthBar" prefHeight="20.0" prefWidth="150.0" progress="0.0" />
                <Label fx:id="passwordStrengthLabel" text="Faible" textFill="WHITE" />
            </children>
        </HBox>

        <Label text="Role:" textFill="WHITE" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="270.0" />
        <HBox alignment="CENTER" spacing="30.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="270.0">
            <children>
                <RadioButton layoutX="260.0" layoutY="270.0" mnemonicParsing="false" text="Organisateur" textFill="WHITE">
                    <toggleGroup>
                        <ToggleGroup fx:id="rolegrp" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton layoutX="380.0" layoutY="270.0" mnemonicParsing="false" text="Participant" textFill="WHITE" toggleGroup="$rolegrp" />
            </children>
        </HBox>

        <!-- Ajout de la section pour l'image de profil -->
        <Label text="Photo de profil:" textFill="WHITE" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="310.0" />
        <HBox alignment="CENTER_LEFT" spacing="10.0" AnchorPane.leftAnchor="260.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="310.0">
            <children>
                <Button fx:id="btn_choisir_image" mnemonicParsing="false" onAction="#choisirImage" text="Choisir une image" />
                <Label fx:id="image_path_label" text="Aucun fichier sélectionné" textFill="WHITE" />
            </children>
        </HBox>
        <ImageView fx:id="image_preview" fitHeight="100.0" fitWidth="100.0" preserveRatio="true" AnchorPane.leftAnchor="260.0" AnchorPane.topAnchor="340.0" />
