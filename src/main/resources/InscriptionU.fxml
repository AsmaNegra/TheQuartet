        <Button fx:id="btn_inscrire" mnemonicParsing="false" onAction="#saveutili" prefHeight="31.0" styleClass="button_crud" text="S'inscrire" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="460.0" />
        <Button fx:id="btn_annuler" mnemonicParsing="false" onAction="#annuler" prefHeight="31.0" styleClass="button_crud" text="Annuler" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="510.0" />
