   <children>

            <TextField fx:id="champs_mdp_visible" visible="false" AnchorPane.leftAnchor="260.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="180.0" />
      <AnchorPane styleClass="Bg_login" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" layoutX="130.0" layoutY="81.0" styleClass="login_pane" AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="270.0" AnchorPane.rightAnchor="270.0" AnchorPane.topAnchor="70.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
                     <children>
                        <ImageView fitHeight="124.0" fitWidth="103.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/Orchestra/Orchestra%20dark.png" />
                           </image>
                        </ImageView>
                        <Label alignment="CENTER" prefHeight="27.0" prefWidth="570.0" styleClass="welcome-text" text="S'authentifier" textFill="WHITE">
                           <font>
                              <Font name="Open Sans Bold" size="25.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Label styleClass="welcome-text" text="Email :" textFill="WHITE">
                                 <HBox.margin>
                                    <Insets right="25.0" />
                                 </HBox.margin>
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>

                                          <TextField fx:id="mail_field" prefHeight="26.0" prefWidth="180.0" />
