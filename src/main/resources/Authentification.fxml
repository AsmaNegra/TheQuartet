                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                           <children>
                              <HBox alignment="CENTER" spacing="15.0">
                                 <children>
                              
                                                <Button fx:id="btn_cnx" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#connect" prefHeight="40.0" styleClass="button_crud" text="Se connecter" />
                                    <Button fx:id="btn_inscri" mnemonicParsing="false" onAction="#inscri" prefHeight="40.0" prefWidth="116.0" styleClass="button_crud" text="S'inscrire" />
                                 </children>
                              </HBox>
                        
                                          <Button fx:id="btn_google" mnemonicParsing="false" onAction="#connectWithGoogle" prefHeight="42.0" prefWidth="219.0" text="Se connecter avec Google">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <styleClass>
                                    <String fx:value="button_crud" />
                                    <String fx:value="google-button" />
                                 </styleClass>
                                 <font>
                                    <Font name="Open Sans Regular" size="12.0" />
                                 </font>
                              </Button>
                           </children>
                        </VBox>
                     </children>
