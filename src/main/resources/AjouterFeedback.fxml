<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="background_color" stylesheets="@styles_new.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterFeedbackController">
    <children>
        <VBox layoutX="30.0" layoutY="30" prefHeight="346.0" prefWidth="538.0" spacing="15" stylesheets="@styles_new.css">
            <children>
                <Label style="-fx-font-size: 16;" styleClass="task-form" text="Ajouter un feedback pour l'événement :" />
                <Label fx:id="nomEvenementLabel" style="-fx-font-weight: bold; -fx-font-size: 14;" styleClass="task-form" />
            <HBox>
               <children>

                      <Label styleClass="task-form" text="Note (1-5) :" />
                  <FontAwesomeIconView glyphName="STAR" style="-fx-fill: yellow;">
                     <HBox.margin>
                        <Insets left="5.0" top="5.0" />
                     </HBox.margin>
                  </FontAwesomeIconView>
               </children>
            </HBox>
                <Spinner fx:id="noteSpinner" editable="true" initialValue="5" max="5" min="1" prefWidth="100" styleClass="task-form" />

                <Label styleClass="task-form" text="Commentaire :" />
                <TextArea fx:id="commentaireArea" prefHeight="150.0" prefWidth="478.0" styleClass="task-form" wrapText="true">
               <VBox.margin>
                  <Insets />
               </VBox.margin></TextArea>

                <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="transparent_bg">
                    <Button fx:id="ajouterButton" onAction="#ajouterFeedback" styleClass="colored_card" text="Ajouter">
                  <HBox.margin>
                     <Insets bottom="5.0" right="5.0" top="5.0" />
                  </HBox.margin></Button>
                    <Button fx:id="annulerButton" onAction="#annuler" styleClass="colored_card" text="Annuler">
                  <HBox.margin>
                     <Insets bottom="5.0" right="5.0" top="5.0" />
                  </HBox.margin></Button>
                </HBox>
            </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <styleClass>
            <String fx:value="pane" />
            <String fx:value="background_color" />
            <String fx:value="task-form" />
         </styleClass>
        </VBox>
    </children>
</AnchorPane>
