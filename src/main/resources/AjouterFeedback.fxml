<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="background_color" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterFeedbackController">
    <children>
        <VBox layoutX="50" layoutY="30" prefWidth="500" spacing="15" styleClass="colored_card,task-form" stylesheets="@style.css">
            <children>
                <Label style="-fx-font-size: 16;" styleClass="task-form" text="Ajouter un feedback pour l'événement :" />
                <Label fx:id="nomEvenementLabel" style="-fx-font-weight: bold; -fx-font-size: 14;" styleClass="task-form" />

                <Label styleClass="task-form" text="Note (1-5) :" />
                <Spinner fx:id="noteSpinner" editable="true" initialValue="5" max="5" min="1" prefWidth="100" styleClass="task-form" />

                <Label styleClass="task-form" text="Commentaire :" />
                <TextArea fx:id="commentaireArea" prefHeight="150" prefWidth="500" styleClass="task-form" wrapText="true" />

                <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="transparent_bg">
                    <Button fx:id="ajouterButton" onAction="#ajouterFeedback" styleClass="colored_card" text="Ajouter">
                  <HBox.margin>
                     <Insets bottom="5.0" right="5.0" top="5.0" />
                  </HBox.margin></Button>
                    <Button fx:id="annulerButton" onAction="#annuler" styleClass="colored_card" text="Annuler">
                  <HBox.margin>
                     <Insets bottom="5.0" right="5.0" top="5.0" />
                  </HBox.margin></Button>
                </HBox>
            </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
        </VBox>
    </children>
</AnchorPane>
