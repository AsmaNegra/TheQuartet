<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="852.0" prefWidth="741.0" styleClass="background_color" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterEvenementController">
    <children>
        <VBox layoutX="40.0" layoutY="20.0" prefWidth="660.0" spacing="15" styleClass="colored_card,task-form">
            <children>
                <Label fx:id="AjouterEvent" style="-fx-font-size: 20;" styleClass="task-form" text="Ajouter Evenement" />

                <Label fx:id="nomEvent" styleClass="task-form" text="Nom de l'événement" />
                <TextField fx:id="evenementNomField" prefWidth="600.0" styleClass="task-form" />

                <Label fx:id="descriptionEvent" styleClass="task-form" text="Description de l'événement" />
                <TextArea fx:id="evenementDescriptionArea" prefHeight="64.0" prefWidth="600.0" styleClass="task-form" />

                <HBox spacing="10">
                    <children>
                        <VBox prefWidth="290" spacing="5">
                            <Label fx:id="date_debutEvent" styleClass="task-form" text="Date et heure de début" />
                            <HBox spacing="10">
                                <DatePicker fx:id="evenementDateDebutPicker" prefWidth="160.0" styleClass="task-form" />
                                <Spinner fx:id="evenementHeureDebutField" editable="true" prefWidth="120.0" styleClass="task-form" />
                            </HBox>
                        </VBox>

                        <VBox prefWidth="290" spacing="5">
                            <Label fx:id="date_finEvent" styleClass="task-form" text="Date et heure de fin" />
                            <HBox spacing="10">
                                <DatePicker fx:id="evenementDateFinPicker" prefWidth="160.0" styleClass="task-form" />
                                <Spinner fx:id="evenementHeureFinField" editable="true" prefWidth="120.0" styleClass="task-form" />
                            </HBox>
                        </VBox>
                    </children>
                </HBox>

                <Label fx:id="lieuEvent" styleClass="task-form" text="Lieu de l'événement" />
                <TextField fx:id="evenementLieuField" prefWidth="600.0" styleClass="task-form" />

                <Label fx:id="categorieEvent" styleClass="task-form" text="Catégorie de l'événement" />
                <ComboBox fx:id="evenementCategorieComboBox" editable="true" prefWidth="600.0" styleClass="task-form" />

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <VBox prefWidth="290" spacing="5">
                        <Label fx:id="budgetEvent" styleClass="task-form" text="Budget de l'événement" />
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <TextField fx:id="evenementBudgetField" prefWidth="250.0" styleClass="task-form" />
                            <Label styleClass="task-form" text="TND" />
                        </HBox>
                    </VBox>

                    <VBox prefWidth="290" spacing="5">
                        <Label fx:id="nb_placesEvent" styleClass="task-form" text="Nombre de places" />
                        <TextField fx:id="evenementNbPlacesField" prefWidth="290.0" styleClass="task-form" />
                    </VBox>
                </HBox>

                <Label fx:id="image_event" styleClass="task-form" text="Image de l'événement" />
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <Button fx:id="choisirImageButton" onAction="#choisirImage" styleClass="colored_card" text="Choisir une image" />
                    <TextField fx:id="evenementImageField" editable="false" styleClass="task-form" visible="false" />
                    <ImageView fx:id="imagePreview" fitHeight="123.0" fitWidth="123.0" preserveRatio="true" />
                </HBox>

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="evenementAjouterButton" onAction="#ajouterEvenement" styleClass="colored_card" text="Ajouter">
                  <HBox.margin>
                     <Insets bottom="5.0" right="5.0" />
                  </HBox.margin></Button>
                    <Button fx:id="evenementFermerButton" onAction="#handleFermerButton" styleClass="colored_card" text="Fermer">
                  <HBox.margin>
                     <Insets bottom="5.0" right="5.0" />
                  </HBox.margin></Button>
                </HBox>
            </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
         </padding>
        </VBox>
    </children>
</AnchorPane>
