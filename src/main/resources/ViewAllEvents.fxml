            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ViewAllEventsController">

    <!-- Sidebar Gauche -->
    <left>
        <AnchorPane prefHeight="567.0" prefWidth="58.0" styleClass="sidebar" stylesheets="@styles.css">
            <children>
                <FontAwesomeIconView fill="#797878" glyphName="BARS" layoutX="20.2" layoutY="30.628571701049804"
                                     selectionFill="#bc802d" size="1.5em" text="" wrappingWidth="23.199981689453125"
                                     AnchorPane.leftAnchor="20.2" AnchorPane.rightAnchor="13.40001831054687"
                                     AnchorPane.topAnchor="15.2"/>
                <VBox layoutX="20.0" layoutY="119.0">
                    <children>
                        <FontAwesomeIconView fill="#f49617" glyphName="SITEMAP" size="1.5em"/>
                        <FontAwesomeIconView glyphName="GIFT" size="1.5em" styleClass="sidebar_opt">
                            <VBox.margin>
                                <Insets top="15.0"/>
                            </VBox.margin>
                        </FontAwesomeIconView>
                        <FontAwesomeIconView glyphName="USER" size="1.5em" styleClass="sidebar_opt">
                            <VBox.margin>
                                <Insets top="15.0"/>
                            </VBox.margin>
                        </FontAwesomeIconView>
                        <FontAwesomeIconView glyphName="HOME" size="1.5em" styleClass="sidebar_opt" >
                            <VBox.margin>
                                <Insets top="15.0"/>
                            </VBox.margin>
                        </FontAwesomeIconView>
                        <Separator>
                            <VBox.margin>
                                <Insets bottom="15.0" top="15.0"/>
                            </VBox.margin>
                        </Separator>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </left>

    <!-- Contenu Principal -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="transparent_bg">
            <content>
                <VBox spacing="20" styleClass="main-container">
                    <!-- En-tête -->
                    <HBox styleClass="pane" alignment="CENTER" spacing="15">
                        <padding>
                            <Insets top="10" right="15" bottom="10" left="15"/>
                        </padding>
                        <ImageView fitHeight="60.0" fitWidth="60.0" preserveRatio="true">
                            <image>
                                <Image url="@images/Orchestra/1.png"/>
                            </image>
                        </ImageView>
                        <Separator orientation="VERTICAL"/>
                        <Label text="Ravi de vous revoir !" styleClass="welcome-text">
                            <font>
                                <Font name="Montserrat-Regular" size="18.0"/>
                            </font>
                        </Label>
                        <TextField promptText="Chercher un evenement..." styleClass="search-field"/>
                        <Label text="16:49 16/02/2025" styleClass="time-text"/>
                    </HBox>

                    <!-- Catégories -->
                    <ScrollPane fitToWidth="true" styleClass="transparent_bg">
                        <content>
                            <HBox fx:id="categoriesContainer" spacing="10" styleClass="categories-container">
                                <padding>
                                    <Insets top="10" right="15" bottom="10" left="15"/>
                                </padding>
                            </HBox>
                        </content>
                    </ScrollPane>

                    <!-- Conteneur des événements -->
                    <TilePane fx:id="eventsContainer"
                              hgap="20" vgap="20"
                              prefTileWidth="340"
                              prefColumns="2">
                        <padding>
                            <Insets top="10" right="15" bottom="10" left="15"/>
                        </padding>
                    </TilePane>

                    <!-- Pied de page -->
                    <HBox alignment="CENTER" spacing="20" styleClass="footer">
                        <padding>
                            <Insets top="15" right="15" bottom="15" left="15"/>
                        </padding>
                        <Label styleClass="footer-text" text="À propos"/>
                        <Label styleClass="footer-text" text="Contact"/>
                        <Label styleClass="footer-text" text="Mentions légales"/>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- Sidebar Droite -->
    <right>
        <VBox styleClass="sidebar-right" spacing="15">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <VBox styleClass="sidebar-section">
                <Label text="Calendrier" styleClass="section-title"/>
            </VBox>
            <VBox styleClass="sidebar-section">
                <Label text="Événements à la une" styleClass="section-title"/>
            </VBox>
            <VBox styleClass="sidebar-section">
                <Label text="Carte" styleClass="section-title"/>
