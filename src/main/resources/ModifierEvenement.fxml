<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="747.0" prefWidth="741.0" styleClass="background_color" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifierEvenementController">
    <children>
        <VBox layoutX="50" layoutY="30" prefWidth="641" spacing="15" styleClass="colored_card,task-form" stylesheets="@style.css">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label fx:id="AjouterEvent" style="-fx-font-size: 18; -fx-font-weight: bold;" styleClass="task-form" text="Modifier Evenement" />

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="nomEvent" prefHeight="20.0" prefWidth="171.0" styleClass="task-form" text="Nom de l'événement" />
                        <TextField fx:id="evenementNomField" prefHeight="38.0" prefWidth="414.0" styleClass="task-form" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="descriptionEvent" prefHeight="20.0" prefWidth="292.0" styleClass="task-form" text="Description de l'événement" />
                        <TextArea fx:id="evenementDescriptionArea" styleClass="task-form" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="date_debutEvent" prefHeight="20.0" prefWidth="169.0" styleClass="task-form" text="Date et heure de début" />
                        <DatePicker fx:id="evenementDateDebutPicker" styleClass="task-form" HBox.hgrow="ALWAYS" />
                        <Spinner fx:id="evenementHeureDebutField" editable="true" prefHeight="42.0" prefWidth="150.0" styleClass="task-form" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="date_finEvent" prefHeight="20.0" prefWidth="170.0" styleClass="task-form" text="Date et heure de fin" />
                        <DatePicker fx:id="evenementDateFinPicker" styleClass="task-form" HBox.hgrow="ALWAYS" />
                        <Spinner fx:id="evenementHeureFinField" editable="true" prefHeight="42.0" prefWidth="150.0" styleClass="task-form" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="lieuEvent" prefHeight="20.0" prefWidth="166.0" styleClass="task-form" text="Lieu de l'événement" />
                        <TextField fx:id="evenementLieuField" styleClass="task-form" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="categorieEvent" prefHeight="20.0" prefWidth="165.0" styleClass="task-form" text="Catégorie de l'événement" />
                        <ComboBox fx:id="evenementCategorieComboBox" editable="true" styleClass="colored_card" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="budgetEvent" prefHeight="20.0" prefWidth="166.0" styleClass="task-form" text="Budget de l'événement" />
                        <TextField fx:id="evenementBudgetField" styleClass="task-form" HBox.hgrow="ALWAYS" />
                        <Label styleClass="task-form" text="TND" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="nb_placesEvent" prefHeight="20.0" prefWidth="164.0" styleClass="task-form" text="Nombre de places" />
                        <TextField fx:id="evenementNbPlacesField" styleClass="task-form" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="image_event" prefHeight="20.0" prefWidth="164.0" styleClass="task-form" text="Image de l'événement" />
                        <VBox spacing="10" HBox.hgrow="ALWAYS">
                            <children>
                                <Button fx:id="choisirImageButton" onAction="#choisirImage" styleClass="colored_card" text="Choisir une image" />
                                <TextField fx:id="evenementImageField" editable="false" styleClass="task-form" visible="false" />
                            </children>
                        </VBox>
                        <ImageView fx:id="imagePreview" fitHeight="123.0" fitWidth="123.0" preserveRatio="true" />
                    </children>
                </HBox>

                <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="transparent_bg">
                    <children>
                        <Button fx:id="evenementModifierButton" onAction="#modifierEvenement" styleClass="colored_card" text="Modifier" />
                        <Button fx:id="evenementFermerButton" onAction="#handleFermerButton" styleClass="colored_card" text="Fermer" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
