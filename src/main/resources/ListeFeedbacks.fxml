<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="607.0" prefWidth="1160.0" styleClass="background_color" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ListeFeedbacksController">
    <children>
        <VBox spacing="10" styleClass="colored_card,task-form" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="transparent_bg">
                    <children>
                        <Label styleClass="task-form" text="Rechercher :" />
                        <TextField fx:id="rechercheField" prefWidth="200" promptText="Rechercher un feedback..." styleClass="task-form" />
                        <Button fx:id="effacerRechercheButton" onAction="#effacerRecherche" styleClass="colored_card" text="×" />

                        <Label styleClass="task-form" text="Note :">
                     <HBox.margin>
                        <Insets left="120.0" />
                     </HBox.margin></Label>
                        <ComboBox fx:id="noteFilterComboBox" prefWidth="100" styleClass="task-form">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></ComboBox>

                        <Label styleClass="task-form" text="Date :">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Label>
                        <DatePicker fx:id="dateFilterPicker" styleClass="task-form">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></DatePicker>

                        <Button fx:id="resetFilterButton" styleClass="colored_card" text="Réinitialiser les filtres">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="transparent_bg">
                    <children>
                        <Label style="-fx-font-size: 16;" styleClass="task-form" text="Feedbacks pour l'événement : " />
                        <Label fx:id="nomEvenementLabel" style="-fx-font-weight: bold; -fx-font-size: 16;" styleClass="task-form" />
                    </children>
                </HBox>

                <TableView fx:id="feedbackTable" prefHeight="400.0" prefWidth="1091.0" styleClass="pane" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="noteColumn" prefWidth="100" text="Note" />
                        <TableColumn fx:id="commentaireColumn" prefWidth="397.5999450683594" text="Commentaire" />
                        <TableColumn fx:id="dateColumn" prefWidth="171.20001220703125" text="Date" />
                        <TableColumn fx:id="utilisateurColumn" prefWidth="135.199951171875" text="Utilisateur" />
                        <TableColumn fx:id="actionsColumn" prefWidth="296.0001220703125" text="Actions" />
                    </columns>
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
               </VBox.margin>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="transparent_bg">
                    <children>
                        <Button fx:id="ajouterButton" onAction="#ajouterFeedback" styleClass="colored_card" text="Ajouter un feedback" />
                        <Button fx:id="fermerButton" onAction="#fermer" styleClass="colored_card" text="Fermer" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
