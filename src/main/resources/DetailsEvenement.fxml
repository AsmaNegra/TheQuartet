<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="688.0" prefWidth="741.0" styleClass="background_color" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DetailsEvenement">
    <children>
        <VBox layoutX="50" layoutY="30" prefWidth="641" spacing="15" styleClass="colored_card,task-form" stylesheets="@style.css">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label fx:id="AjouterEvent" style="-fx-font-size: 18; -fx-font-weight: bold;" styleClass="task-form" text="Detail Evenement" />

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="nomEvent" styleClass="task-form" text="Nom de l'événement" />
                        <TextField fx:id="resNom" editable="false" styleClass="task-form" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="descriptionEvent" styleClass="task-form" text="Description de l'événement" />
                        <TextArea fx:id="resDescription" editable="false" styleClass="task-form" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="date_debutEvent" styleClass="task-form" text="Date et heure de début" />
                        <Label fx:id="resDateDebut" styleClass="task-form" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="date_finEvent" styleClass="task-form" text="Date et heure de fin" />
                        <Label fx:id="resDateFin" styleClass="task-form" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="lieuEvent" styleClass="task-form" text="Lieu de l'événement" />
                        <TextField fx:id="resLieu" editable="false" styleClass="task-form" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="categorieEvent" styleClass="task-form" text="Catégorie de l'événement" />
                        <TextField fx:id="resCategorie" editable="false" styleClass="task-form" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="budgetEvent" styleClass="task-form" text="Budget de l'événement" />
                        <TextField fx:id="resBudget" editable="false" styleClass="task-form" HBox.hgrow="ALWAYS" />
                        <Label styleClass="task-form" text="TND" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="nb_placesEvent" styleClass="task-form" text="Nombre de places" />
                        <TextField fx:id="resNbPlaces" editable="false" styleClass="task-form" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox spacing="15" styleClass="transparent_bg">
                    <children>
                        <Label fx:id="image_event" styleClass="task-form" text="Image de l'événement" />
                        <ImageView fx:id="resImageEvent" fitHeight="112.0" fitWidth="145.0" pickOnBounds="true" preserveRatio="true" />
                    </children>
                </HBox>

                <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="transparent_bg">
                    <children>
                        <Button fx:id="evenementModifierButton" onAction="#modifierEvenement" styleClass="colored_card" text="Modifier" />
                        <Button fx:id="evenementFermerButton" onAction="#handleFermerButton" styleClass="colored_card" text="Fermer" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
