                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="515.2" prefWidth="872.0" styleClass="transparent_bg" vbarPolicy="ALWAYS" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <content>
                        <GridPane alignment="center" hgap="10" stylesheets="@styles.css" vgap="10">
                            <padding>
                                <Insets bottom="15" left="15" right="15" top="15" />
                            </padding>

                            <!-- Titre -->
                            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Afficher les Tickets d'un Événement" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

                            <!-- Sélection de l'événement -->
                            <Label prefHeight="35.0" prefWidth="150.0" styleClass="colored_card" stylesheets="@styles.css" text="   Événement:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <ComboBox fx:id="evenementComboBox" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <!-- Détails de l'événement -->
                            <Label prefHeight="35.0" prefWidth="150.0" styleClass="colored_card" stylesheets="@styles.css" text="   Nom de l'événement:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <Label fx:id="nomEvenementLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            <Label prefHeight="35.0" prefWidth="150.0" styleClass="colored_card" stylesheets="@styles.css" text="   Lieu :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <Label fx:id="lieuEvenementLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            <Label prefHeight="35.0" prefWidth="150.0" styleClass="colored_card" stylesheets="@styles.css" text="   Date Début :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <Label fx:id="dateDebutEvenementLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                            <Label prefHeight="35.0" prefWidth="150.0" styleClass="colored_card" stylesheets="@styles.css" text="   Date Fin :" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                            <Label fx:id="dateFinEvenementLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                            <!-- Tableau des tickets -->
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Tickets associés à l'événement" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6" />
                            <TableView fx:id="ticketsTable" prefHeight="170.0" prefWidth="616.0" GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.rowIndex="7">
                                <columns>
                                    <TableColumn fx:id="typeColumn" text="Type" />
                                    <TableColumn fx:id="prixColumn" text="Prix (TND)" />
                                    <TableColumn fx:id="statutColumn" text="Statut" />
                                    <TableColumn fx:id="dateValiditeColumn" text="Date de validité" />
                                    <TableColumn fx:id="quantiteColumn" text="Quantité disponible" />
                                    <TableColumn fx:id="actionsColumn" prefWidth="150.0" text="Actions" />
                                </columns>
                            </TableView>

                            <!-- Message d'erreur ou de succès -->
                            <Label fx:id="messageLabel" style="-fx-text-fill: red;" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="8" />

                            <!-- Bouton Ajouter Ticket -->
                            <Button alignment="CENTER" onAction="#ajouterTicket" prefHeight="35.0" prefWidth="150.0" styleClass="button_crud" stylesheets="@styles.css" text="Ajouter Ticket" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="9" />
                     <columnConstraints>
                        <ColumnConstraints maxWidth="203.20004882812503" minWidth="155.19998779296878" prefWidth="196.00003662109378" />
