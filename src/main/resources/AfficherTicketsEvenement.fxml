<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefHeight="450.0" prefWidth="650.0" stylesheets="@styles.css" vgap="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherTicketsEvenementController">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <!-- Titre -->
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Afficher les Tickets d'un Événement" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <!-- Sélection de l'événement -->
    <Label text="Événement:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox fx:id="evenementComboBox" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <!-- Détails de l'événement -->
    <Label text="Nom de l'événement:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Label fx:id="nomEvenementLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Lieu:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Label fx:id="lieuEvenementLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Date Début:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Label fx:id="dateDebutEvenementLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Date Fin:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <Label fx:id="dateFinEvenementLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <!-- Tableau des tickets -->
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Tickets associés à l'événement" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6" />
    <TableView fx:id="ticketsTable" prefHeight="170.0" prefWidth="616.0" GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.rowIndex="7">
        <columns>
            <TableColumn fx:id="typeColumn" text="Type">
                <cellValueFactory>
                    <PropertyValueFactory property="type" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="prixColumn" text="Prix (TND)">
                <cellValueFactory>
                    <PropertyValueFactory property="prix" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="statutColumn" text="Statut">
                <cellValueFactory>
                    <PropertyValueFactory property="statut" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="dateValiditeColumn" maxWidth="180" minWidth="120" prefWidth="140" text="Date de validité">
                <cellValueFactory>
                    <PropertyValueFactory property="date_validite" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="quantiteColumn" maxWidth="180" minWidth="120" prefWidth="140" text="Quantité disponible">
                <cellValueFactory>
                    <PropertyValueFactory property="nb_tickets" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="actionsColumn" maxWidth="200" minWidth="160" prefWidth="180" text="Actions" />
        </columns>
    </TableView>

    <!-- Message d'erreur ou de succès -->
    <Label fx:id="messageLabel" style="-fx-text-fill: red;" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="8" />

    <!-- Bouton Ajouter Ticket -->
    <Button alignment="CENTER" onAction="#ajouterTicket" text="Ajouter Ticket" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="9" />

    <!-- Contraintes des colonnes -->
    <columnConstraints>
        <ColumnConstraints minWidth="150.0" />
        <ColumnConstraints minWidth="250.0" />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
    </columnConstraints>

    <!-- Contraintes des lignes -->
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />

    </rowConstraints>
   <styleClass>
      <String fx:value="background_color" />
      <String fx:value="colored_card" />
   </styleClass>
</GridPane>
